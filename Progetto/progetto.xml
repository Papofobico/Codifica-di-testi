        <body>
            <div type="page" xml:id="div_pagina10">
                <pb n="1" />
                <opener facs="#cardinalePagina10" rend="left" xml:id="opener10">
                    <num rend="circle">10</num>
                    <space />
                </opener>
                <p xml:id="paragrafoPag10">

                    <lb xml:id="primaRigaPagina10" />
                    Une
                    <choice>
                        <orig>necéssite</orig>
                        <corr>nécessité</corr>
                    </choice>
                    <choice>
                        <abbr>pon</abbr>
                        <expan>
                            <term ref="phonétique"> phonétique </term>
                        </expan>
                    </choice>
                    <unclear reason="illegible" resp="#mestesso" precision="high">|</unclear>
                    ayant
                    <choice>
                        <abbr> accidentellt </abbr>
                        <expan>accidentellement</expan>
                    </choice>

                    <lb facs="#secondaRigaPagina10" />
                    fait
                    <choice>
                        <abbr>disp.</abbr>
                        <expan>disparaître</expan>
                    </choice>
                    <foreign rend="underline">iz</foreign>
                    au
                    <choice>
                        <orig>singul</orig>
                        <corr>singulier</corr>
                    </choice>
                    <unclear reason="illegible" resp="#mestesso">|</unclear>
                    tandis
                    <unclear reason="faded" resp="#mestesso">qu'</unclear>
                    il
                    <lb xml:id="terzaRigaPagina10" />
                    se maintenait au
                    <choice>
                        <abbr>plur</abbr>
                        <expan>plural</expan>
                    </choice>
                    <unclear reason="illegible" resp="#mestesso"></unclear>
                    grâcè
                    <choice>
                        <orig>a</orig>
                        <corr>à</corr>
                    </choice>
                    la protection de la voyel le qui suivait
                    <lb xml:id="quartaRigaPagina10" />
                    <choice>
                        <orig resp="#mestesso" facs="#aggiuntaPrimaPartePagina22">
                            on la
                            <choice>
                                <orig>lgne</orig>
                                <corr>
                                    <term ref="langue"> langue </term>
                                </corr>
                            </choice>
                            <unclear>
                                <del facs="#aggiuntaPrimaPartePagina22Cancellatura" rend="strikethrough" resp="#mestesso" hand="#DS" quantity="5" precision="medium"></del>
                            </unclear>
                            <unclear rend="strikethrough" resp="#mestesso" precision="high">né</unclear>
                            jugeant jamais que par les formes,
                        </orig>

                        <corr resp="#editor">
                            : on la
                            <term ref="langue"> langue </term>
                            né jugeant jamais que par les formes,
                        </corr>
                    </choice>
                    il est inévitable que la
                    <term ref="langue">langue </term>
                    divise
                    <lb xml:id="quintaRigaPagina10" />
                    <foreign facs="#Kalbir">
                        Kalb/
                        <foreign rend="underline">ir</foreign>
                    </foreign>
                    <unclear>
                        <del resp="#mestesso" facs="#cancellaturaSuperiore" rend="strikethrough" hand="DS" precision="high">qu'il</del>
                    </unclear>
                    <lb />
                    et prenne
                    <foreign rend="underline">ir</foreign>
                    pour le signe du plureil,
                    <lb xml:id="sestaRigaPagina10" />
                    <add hand="#DS" facs="#primoTestoLateraleDestro">
                        tandis qu'à l'
                        <choice>
                            <abbr>orig</abbr>
                            <ex resp="#editor">origine</ex>
                        </choice>
                        il n'avait rien de
                        <choice>
                            <abbr> specif.</abbr>
                            <expan resp="#editor"> spécifiquement </expan>
                        </choice>
                        <choice>
                            <abbr> plu </abbr>
                            <expan resp="#editor">pluriel</expan>
                        </choice>
                    </add>
                    <unclear>
                        <del hand="#DS" facs="#primoSegnoLateraleSinistro" rend="illegible"></del>
                    </unclear>
                    <lb xml:id="settimaRigaPagina10" />
                    Cela est faux
                    <choice>
                        <abbr>
                            historq
                            <c rend="strikethrough" facs="#abbreviazioneSuperiore"></c>
                        </abbr>
                        <expan>historiquement</expan>
                    </choice>
                    , et cela est
                    <lb xml:id="ottavaRigaPagina10" />
                    juste pour la
                    <term ref="morphologie"> morphologie </term>
                    <choice>
                        <orig>del'è</orig>
                        <corr>de l'</corr>
                    </choice>
                    <choice>
                        <abbr> époq.</abbr>
                        <expan> èpoque </expan>
                    </choice>
                    <lb xml:id="nonaRigaPagina10" />
                    en question.
                    <orig rend="strikethrough" resp="#autor" facs="#primaAggiuntaSuperiore">
                        La vie
                        <choice>
                            <orig> della</orig>
                            <corr>de la</corr>
                        </choice>
                        <choice>
                            <abbr resp="#autor"> lagn</abbr>
                            <expan>
                                <term ref="langue">  langue </term>
                            </expan>
                        </choice>
                        est faite
                        <choice>
                            <orig>deces </orig>
                            <corr> de ces</corr>
                        </choice>
                        méprises
                    </orig>
                    Rappelons-nous que tout
                    <lb xml:id="decimaRigaPagina10" />
                    c'est qui est
                    <choice>
                        <abbr resp="#autor" rend="italic"> d </abbr>
                        <expan>dans</expan>
                    </choice>
                    le sentiment
                    <choice>
                        <abbr resp="#autor">ds</abbr>
                        <expan>des</expan>
                    </choice>
                    sujets
                    <choice>
                        <abbr resp="#autor">parl </abbr>
                        <expan>parlant</expan>
                    </choice>
                    . 
                        est phénomène réel.
                    <lb xml:id="undicesimaRigaPagina10" />
                    <orig resp="#mestesso" facs="#secondaAggiuntaLateraleSinistra">
                        N
                        <choice>
                            <abbr rend="strikethrough">S</abbr>
                            <expan>ous</expan>
                        </choice>
                        n'avons pas à
                        <choice>
                            <abbr resp="#mestesso">us</abbr>
                            <expan>nous</expan>
                        </choice>
                        inquiéter de ce qui a pu provoquer ce sentiment
                    </orig>
                    le
                    <term ref="morphologie">morphologie </term>
                    <lb xml:id="dodicesimaRigaPagina10" />
                    lui-mème
                    <idno rend="underline">doit</idno>
                    couper
                    <foreign rend="underline">Kalb</foreign>
                    /
                    <foreign rend="underline">ir</foreign>
                    , car
                    <lb xml:id="tredicesimaRigaPagina10" />
                    c'est là l'analyse
                    <choice>
                        <orig>dela</orig>
                        <corr>de la</corr>
                    </choice>
                    <term ref="langue"> langue </term>
                    <orig resp="#DS" facs="#primaAggiuntaLateraleDestra">et cette analyse est son seul guide.</orig>
                    et elle
                    <lb xml:id="quattordicesimaRigaPagina10" />
                    s'atteste par les
                    <choice>
                        <abbr>
                        form.</abbr>
                        <expan resp="#editor">formations</expan>
                    </choice>
                    nouvelles:
                    <lb xml:id="quindicesimaRigaPagina10" />
                    par
                    <choice>
                        <abbr>ex</abbr>
                        <expan resp="#mestesso">example</expan>
                    </choice>
                    <foreign>Kind-er</foreign>
                    <lb xml:id="sedicesimaRigaPagina10" />
                    <choice>
                        <unclear resp="#mestesso" rend="illegible"></unclear>
                        <corr resp="#editor">moralité:</corr>
                    </choice>
                    Une fois de plus
                    <add resp="#editor">,</add>
                    nous voyons
                    <lb xml:id="diciasettesimaRigaPagina10" />
                    que la
                    <term ref="morphologie"> morphologie </term>
                    ne peut
                    <unclear>
                        <del hand="#DS" rend="strikethrough" resp="#mestesso" precision="high">pas</del>
                    </unclear>
                    <lb xml:id="diciottesimaRigaPagina10" />
                    jamais combiner et mêler
                    <choice>
                        <abbr>psieus</abbr>
                        <expan>plusieurs</expan>
                    </choice>
                    <choice>
                        <abbr>époq.</abbr>
                        <expan>époques</expan>
                    </choice>
                    <lb xml:id="diciannovesimaRigaPagina10" />
                    <choice>
                        <abbr>diffé</abbr>
                        <expan>différentes</expan>
                    </choice>
                    ; qu'elle doit exercer
                    <choice>
                        <unclear resp="#mestesso" rend="illegible"></unclear>
                        <corr resp="#editor">son</corr>
                    </choice>
                    <lb xml:id="ventesimaRigaPagina10" />
                    activité séparément au sein de
                    <lb xml:id="ventunesimaRigaPagina10" />
                    <choice>
                        <abbr>chaq.</abbr>
                        <expan resp="#mestesso">chaque</expan>
                    </choice>
                    <choice>
                        <abbr>époq.</abbr>
                        <expan>époques</expan>
                    </choice>
                    <idno>,</idno>
                    sous peine de confondre
                    <lb xml:id="ventiduesimaRigaPagina10" />
                    les faits
                    <choice>
                        <abbr>phonétiq.</abbr>
                        <expan resp="#editor">
                            <term ref="phonétique"> phonétiques </term>
                        </expan>
                    </choice>
                    et le faits
                    <choice>
                        <abbr>morp.</abbr>
                        <expan>morphologiques</expan>
                    </choice>
                    <lb xml:id="ventitreesimaRigaPagina10" />
                    Je ne dis pas que ce ne soit
                    <lb xml:id="ventequattresimaRigaPagina10" />
                    pas un procédé courant,
                    <lb xml:id="venticinquesimaRigaPagina10" />
                    je dis que c'est
                    <choice>
                        <unclear resp="#mestesso" rend="illegible"></unclear>
                        <corr resp="#editor">un</corr>
                    </choice>
                    procédé
                    <idno facs="#ultimaAggiuntaPrimaPagina">detéstable</idno>
                </p>
            </div>
            <pb n="11" />
            <div type="page" xml:id="div_pagina11">

                <opener facs="#cardinalePagina11" rend="left" xml:id="opener11">
                    <num rend="circle">11</num>
                    <space></space>
                </opener>

                <p xml:id="paragrafoPag11">

                    <unclear>
                        <del resp="#autor" facs="#primoCancellaturaPagina11" rend="overstriked">4</del>
                    </unclear>
                    <orig facs="#parteSuperiorePagina11" resp="#mestesso">La méthode de</orig>
                    <lb xml:id="primaRiga11" />
                    l'analyse
                    <choice>
                        <abbr>morphologiq.</abbr>
                        <expan>morphologique</expan>
                    </choice>
                    <unclear>
                        <del facs="#segnoDestraAlto11" hand="#DS" resp="#mestesso" rend="strikethroungh">7</del>
                    </unclear>
                    <lb xml:id="secondaRiga11" />
                    rétrospective
                    <choice>
                        <orig>,</orig>
                        <reg resp="#editor"></reg>
                    </choice>
                    ou de l'anachronie
                    <choice>
                        <abbr rend="underline">morph.</abbr>
                        <expan>morphologique.</expan>
                    </choice>
                    <lb xml:id="terzaRiga11" />
                    L'observation qui terminait le
                    <c facs="#indicatoreCapitolo" rend="illegible">§</c>
                    <num>3</num>
                    nous
                    <lb xml:id="quartaRiga11" />
                    a préparés à comprendre ce que c'est
                    <lb xml:id="quintaRiga11" />
                    que le procédé
                    <orig facs="#inserimentoPrimaParte11" resp="#mestesso">tout artificiel que j'appelle</orig>
                    l'
                    <choice>
                        <abbr> anal. </abbr>
                        <expan>analyse</expan>
                    </choice>
                    <choice>
                        <abbr>morph.</abbr>
                        <expan>morphologique.</expan>
                    </choice>
                    rétrospective
                    <lb xml:id="sestaRiga11" />
                    J'ajoute que
                    <choice>
                        <abbr>ttes</abbr>
                        <expan>toutes</expan>
                    </choice>
                    mes remarques précédentes n'avaient
                    <lb xml:id="settimaRiga11" />
                    d'autre but que de bien faire voir
                    <lb xml:id="ottavaRiga11" />
                    en quoi il consiste.Car c'est là
                    <unclear rend="illegible" resp="mestesso"></unclear>
                    <reg resp="#editor">qu'</reg>
                    est
                    <lb xml:id="nonaRiga11" />
                    e véritable nœud
                    <choice>
                        <sic>dela</sic>
                        <corr resp="#editor">de la</corr>
                    </choice>
                    question si
                    <lb xml:id="decimaRiga11" />
                    délicate et si
                    <choice>
                        <abbr>importte</abbr>
                        <expan>importante</expan>
                    </choice>
                    des
                    <orig rend="underlined">racines, suffixes, thèmes</orig>
                    <lb xml:id="undicesimaRiga11" />
                    <choice>
                        <orig rend="illegible" resp="#mestesso"></orig>
                        <reg resp="#editor">et</reg>
                    </choice>
                    <sic rend="underline">désinences, </sic>
                    question
                    <choice>
                        <sic>surlaquelle</sic>
                        <corr resp="#editor">sur laquelle</corr>
                    </choice>
                    <choice>
                        <abbr>vs</abbr>
                        <expan>vous</expan>
                    </choice>
                    <lb xml:id="dodicesimaRiga11" />
                    pourrez lire
                    <choice>
                        <sic>20</sic>
                        <reg resp="#editor">vingt</reg>
                    </choice>
                    <choice>
                        <abbr>vol</abbr>
                        <expan>volumes</expan>
                    </choice>
                    avant de trouver
                    <lb xml:id="tredicesimaRiga11" />
                    le moindre éclaircissement.
                    <foreign facs="#kabirPagina11" rend="underline"> kalb kalbir </foreign>
                    <lb xml:id="quattordicesimaRiga11" />
                    Si je fais intervenir
                    <unclear>
                        <del facs="#primaCancellatura11" rend="overstriked" hand="#DS" quantity="10" precision="medium" resp="#mestesso"></del>
                    </unclear>
                    <lb xml:id="quindicesimaRiga11" />
                    <unclear>
                        <del facs="#secondaCancellatura11" hand="#DS"></del>
                    </unclear>
                    <lb xml:id="sedicesimaRiga11" />
                    <choice>
                        <unclear rend="illegible" facs="#inizioRiga16"></unclear>
                        <corr resp="#editor">dans les formes</corr>
                    </choice>
                    <del resp="#mestesso"></del>
                    du
                    <choice>
                        <abbr rend="illegible" resp="#mestesso" facs="#segnoNeuviemè"></abbr>
                        <expan>neuvième</expan>
                    </choice>
                    siècle
                    <choice>
                        <orig facs="#aggiuntaRiga16" rend="illegible"></orig>
                        <corr> ce qui était vrai de celles du premier siecle</corr>
                    </choice>
                    <del rend="signed" hand="#DS"></del>
                    <w rend="strikethrough">si</w>
                    je dis: non
                    <lb xml:id="diciasettesimaRiga11" />
                    <w rend="underlined"> ir</w>
                    n'est pas
                    <choice>
                        <abbr>désin.</abbr>
                        <expan>désinence</expan>
                    </choice>
                    du
                    <choice>
                        <abbr>plur.</abbr>
                        <expan>pluriel</expan>
                    </choice>
                    ,
                    <del facs="#cancellaturaRiga17" rend="signed" hand="#DS" resp="#mestesso"></del>
                    <unclear>
                        <del facs="#cancellaturaCentralePagina11" rend="strikethrough" resp="#mestesso"></del>
                    </unclear>
                    <lb xml:id="diciottesimaRiga11" />
                    puisqu'on a
                    <choice>
                        <abbr>germ.</abbr>
                        <expan>germanique</expan>
                    </choice>
                    <foreign rend="underline">kalhiz kalbiz-ō</foreign>
                    <lb xml:id="diciannovesimaRiga11" />
                    qu'est-ce que je fais
                    <choice>
                        <orig>,</orig>
                        <reg>?</reg>
                    </choice>
                    <choice>
                        <sic>dela</sic>
                        <corr>de la</corr>
                    </choice>
                    <choice>
